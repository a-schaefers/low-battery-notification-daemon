# Maintainer: Adam Schaefers <sch@efers.org>

pkgname=simple-power-manager
pkgver=1.3
pkgrel=1
pkgdesc='A programmable shell script daemon that performs actions based on power thresholds'
arch=('any')
url="https://github.com/a-schaefers/{pkgname}.git"
license=('MIT')
provides=("${pkgname}")
conflicts=('')
makedepends=('')
depends=('acpi')
source=("https://github.com/a-schaefers/simple-power-manager/archive/v${pkgver}.tar.gz")
sha256sums=('37de50e42c77b759b83c7fb9d6dca280c26a2f5d53c5295477fd6c28b0fd590d')

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install

  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
