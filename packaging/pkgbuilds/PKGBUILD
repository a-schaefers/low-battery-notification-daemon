# I thought somebody might want this? I actually don't use arch. I think this needs a md5 or sha check?

pkgname=simple-power-manager
pkgver=1.0
pkgrel=1
pkgdesc='A programmable shell daemon that performs actions based on power thresholds'
arch=('any')
url="https://github.com/a-schaefers/{pkgname}.git"
license=('MIT')
provides=("${pkgname}")
conflicts=('')
makedepends=('')
depends=('acpi')
source=("https://github.com/a-schaefers/simple-power-manager/archive/v${pkgver}.tar.gz")

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install

  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
