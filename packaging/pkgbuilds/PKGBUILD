# Maintainer: Adam Schaefers <sch@efers.org>

pkgname=simple-power-manager
pkgver=1.3.2
pkgrel=1
pkgdesc='A programmable shell daemon that performs actions based on power thresholds'
arch=('any')
url="https://github.com/a-schaefers/{pkgname}.git"
license=('MIT')
provides=("${pkgname}")
conflicts=('')
makedepends=('')
depends=('acpi')
source=("https://github.com/a-schaefers/simple-power-manager/archive/v${pkgver}.tar.gz")
sha256sums=('bc374f687045b3215d2c3498fdbcc250b7c7fc51511ee58d2cb6516a124fe525')

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install

  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
