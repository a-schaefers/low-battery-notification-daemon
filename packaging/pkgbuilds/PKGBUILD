# Maintainer: Adam Schaefers <sch@efers.org>

pkgname=simple-power-manager
pkgver=1.2.6
pkgrel=1
pkgdesc='Programmable shell script daemon that performs actions based on power thresholds'
arch=('any')
url="https://github.com/a-schaefers/{pkgname}.git"
license=('MIT')
provides=("${pkgname}")
conflicts=('')
makedepends=('')
depends=('acpi')
source=("https://github.com/a-schaefers/simple-power-manager/archive/v${pkgver}.tar.gz")
sha256sums=('c1d03d65aaf020cb535f29c9764d9ca4c0547e425a621abeec0ec24191afbb6f')

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install

  install -d "${pkgdir}/usr/share/license/${pkgname}"
  install -m 755 "LICENSE" "${pkgdir}/usr/share/license/${pkgname}/LICENSE"
}
